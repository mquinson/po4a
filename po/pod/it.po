#. type: verbatim
#: doc/po4a-build.conf.5.pod:314
#, no-wrap
msgid ""
" # HTML DocBook file\n"
" HTMLFILE=\"\"\n"
" \n"
msgstr ""

#. type: =item
#: doc/po4a-build.conf.5.pod:317
msgid "HTMLXSL"
msgstr ""

#. type: textblock
#: doc/po4a-build.conf.5.pod:319
