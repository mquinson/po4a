#. type: verbatim
#: doc/po4a.7.pod:88
#, no-wrap
msgid ""
" PO4A-HEADER: position=About this document; mode=after; beginboundary=<section>\n"
" PO4A-HEADER: position=About this document ; mode=after; beginboundary=<section>\n"
"\n"
msgstr ""
" PO4A-HEADER: position=About this document; mode=after; beginboundary=<section>\n"
" PO4A-HEADER: position=About this document ; mode=after; beginboundary=<section>\n"
"\n"

#. type: textblock
#: doc/po4a.7.pod:89
#, fuzzy
#| msgid ""
#| "Although this context search may be considered to operate roughly on each "
