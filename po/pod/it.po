#: lib/Locale/Po4a/Po.pm:53
#, no-wrap
msgid ""
"    ($percent,$hit,$queries) = $pofile->stats_get();\n"
"    print \"So far, we found translations for $percent\\%  ($hit of $queries) of strings.\\n\";\n"
"\n"
msgstr ""

#. type: =item
#: lib/Locale/Po4a/Po.pm:54
