"    use Locale::Po4a::Common qw(nowrapi18n);\n"
"    use Locale::Po4a::Text;\n"
"\n"
msgstr ""
"    use Locale::Po4a::Common qw(nowrapi18n);\n"
"    use Locale::Po4a::Text;\n"
"\n"

#. type: textblock
