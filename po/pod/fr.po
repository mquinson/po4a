#. type: textblock
#: po4a-gettextize:2
msgid ""
"po4a-gettextize - convert an original file (and its translation) to a PO file"
msgstr ""
"po4a-gettextize - Convertir un fichier original (et sa traduction) en "
"fichier PO"

#. type: textblock
#: po4a-gettextize:4
msgid ""
"B<po4a-gettextize> B<-f> I<fmt> B<-m> I<master.doc> [B<-l> I<XX.doc>] B<-p> "
"I<XX.po>"
msgstr ""
