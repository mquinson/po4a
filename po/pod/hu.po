#. type: verbatim
#: lib/Locale/Po4a/Po.pm:5
#, no-wrap
msgid ""
"    # Read PO file\n"
"    $pofile->read('file.po');\n"
"\n"
msgstr ""

#. type: verbatim
#: lib/Locale/Po4a/Po.pm:6
#, no-wrap
msgid ""
"    # Add an entry\n"
"    $pofile->push('msgid' => 'Hello', 'msgstr' => 'bonjour',\n"
"                  'flags' => \"wrap\", 'reference'=>'file.c:46');\n"
