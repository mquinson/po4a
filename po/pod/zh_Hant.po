#. type: verbatim
#: lib/Locale/Po4a/Po.pm:6
#, no-wrap
msgid ""
"    # Add an entry\n"
"    $pofile->push('msgid' => 'Hello', 'msgstr' => 'bonjour',\n"
"                  'flags' => \"wrap\", 'reference'=>'file.c:46');\n"
"\n"
msgstr ""
"    # 新增條目\n"
"    $pofile->push('msgid' => 'Hello', 'msgstr' => '你好',\n"
"                  'flags' => \"wrap\", 'reference'=>'file.c:46');\n"
"\n"

#. type: verbatim
#: lib/Locale/Po4a/Po.pm:7
#, no-wrap
