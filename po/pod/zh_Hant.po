msgid ""
"    use Locale::Po4a::Po;\n"
"    my $pofile=Locale::Po4a::Po->new();\n"
"\n"
msgstr ""

#. type: verbatim
#: lib/Locale/Po4a/Po.pm:5
#, no-wrap
msgid ""
"    # Read PO file\n"
"    $pofile->read('file.po');\n"
"\n"
msgstr ""
"    # 讀取 PO 檔案\n"
