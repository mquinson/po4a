#: msguntypot:31
msgid "L<po4a(7)>"
msgstr "L<po4a(7)>"

#. type: verbatim
#: msguntypot:33
#, no-wrap
msgid ""
" Martin Quinson (mquinson#debian,org)\n"
"\n"
msgstr ""
" Martin Quinson (mquinson#debian,org)\n"
"\n"

