    'doc'   => "Use single and plural form",
  },
  {
    'run'   => "PATH/po4a-translate -f pod -k 0 -m t-13-plural/pod4 -p t-13-plural/pod1.po -l tmp/pod4.fr --option no-warn-simple 2> tmp/err",
